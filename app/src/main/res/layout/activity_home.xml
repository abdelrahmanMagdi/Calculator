<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="14"
    tools:context="com.mvp.Calculator.Home">

    <TextView
        android:id="@+id/screenTV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="#000"
        android:gravity="end|bottom"
        android:hint="0"
        android:padding="15dp"
        android:textColor="#FFF"
        android:textColorHint="#fff"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3">

            <Button
                android:id="@+id/oneBT"
                android:text="1" />

            <Button
                android:id="@+id/twoBT"
                android:text="2" />

            <Button
                android:id="@+id/threeBT"
                android:text="3" />

            <Button
                android:id="@+id/fourBT"
                android:text="4" />

            <Button
                android:id="@+id/fiveBT"
                android:text="5" />

            <Button
                android:id="@+id/sixBT"
                android:text="6" />

            <Button
                android:id="@+id/sevenBT"
                android:text="7" />

            <Button
                android:id="@+id/eightBT"
                android:text="8" />

            <Button
                android:id="@+id/nineBT"
                android:text="9" />

            <Button
                android:id="@+id/acBT"
                android:text="AC" />

            <Button
                android:id="@+id/zeroBT"
                android:text="0" />

            <Button
                android:id="@+id/dotBT"
                android:text="." />
        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="1">

            <Button
                android:id="@+id/addBT"
                android:text="+" />

            <Button
                android:id="@+id/subBT"
                android:text="-" />

            <Button
                android:id="@+id/multBT"
                android:text="*" />

            <Button
                android:id="@+id/divideBT"
                android:text="/" />
        </GridLayout>
    </LinearLayout>

    <Button
        android:id="@+id/equalBT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="=" />

</LinearLayout>